<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — Smiler Portfolio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script language="JavaScript" type="text/javascript" src="~/Scripts/Portfolio.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Smiler", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("O mnie", "About", "Home", new { @id = "AboutMenu" })</li>
                    <li>@Html.ActionLink("Portfolio", "Portfolio", "Home", new { @id = "PortfolioMenu" })</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home", new { @id = "ContactMenu" })</li>
                </ul>
                <div class="navbar-right ">
                    Język: @Html.DropDownList("LanguageList")
                </div>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-4 text-center">
                    <h4>@Html.ActionLink("O mnie", "About", "Home",new {@class = "footer"})</h4>

                </div>
                <div class="col-md-4 text-center">
                    <h4>@Html.ActionLink("Portfolio", "Portfolio", "Home", new { @class = "footer" })</h4>

                </div>
                <div class="col-md-4 text-center">
                    <h4>@Html.ActionLink("Kontakt", "Contact", "Home", new { @class = "footer" })</h4>
                </div>

            </div>

            <p class="text-center">&copy; @DateTime.Now.Year —Smiler</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
